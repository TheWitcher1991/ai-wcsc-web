{
    "extends": [
      "@wcsc/typescript-config/nextjs.json",
      "@gravity-ui/tsconfig/tsconfig"
    ],
    "compilerOptions": {
      "jsx": "react",
      "paths": {
        "~*": ["./src/*"],
        "~public/*": ["./public/*"]
      },
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "next-env.d.ts",
      "next.config",
      ".next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }